    <!-- Enlace a Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilos CSS personalizados -->
    <style>
        /* Estilo para el cuerpo de la página */
        body {
            /* Establecer la imagen de fondo */
            background-image: url('https://media-public.canva.com/3_llk/MAEayf3_llk/1/s.jpg'); /* Reemplaza 'ruta_de_tu_imagen.jpg' con la ruta de tu imagen */
            background-size: cover; /* Ajusta el tamaño de la imagen para cubrir toda la pantalla */
            background-position: center; /* Centra la imagen de fondo */
            background-repeat: no-repeat;
            margin: 0; /* Elimina el margen predeterminado */
            padding-top: 56px; /* Ajusta el espacio superior para que la imagen aparezca debajo de la barra de navegación */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        /* Estilo para la imagen */
        .centered-images {
            display: flex;
            justify-content: center;
            align-items: center;
            position: fixed; /* Fija la posición de las imágenes */
            bottom: 40px; /* Distancia desde abajo */
            left: 70%; /* Centra horizontalmente */
            transform: translateX(-50%); /* Centra horizontalmente */
            z-index: 1; /* Coloca las imágenes encima de otros elementos */
        }

        .centered-images .Izwocg {
            width: 288.585px;
            height: 191.909px;
            transform: translate(-9.43981px, -1.42109e-14px) rotate(0deg);
            margin: 0 10px; /* Espaciado entre las imágenes */
        }

        .centered-images img {
            max-width: 100%;
            max-height: 100%;
        }

        .navbar-brand {
            font-weight: 700;
            font-style: normal;
            color: #333; /* Color del texto gris oscuro */
        }

        .navbar {
            background-color: rgba(192, 192, 192, 0.5) !important; /* Color de fondo gris transparente */
        }

        /* Estilo para el texto "GESTION DE CONTRATOS" */
        .title {
            position: absolute;
            top: 20%; /* Ajusta la posición vertical */
            left: 50%;
            transform: translate(-50%, -50%);
            color: #030303; /* Color del texto negro */
            font-size: 36px; /* Tamaño del texto */
            font-weight: bold; /* Negrita */
            text-align: center; /* Alineación centrada */
            z-index: 1; /* Coloca el texto encima de la imagen */
            font-family: Arial, sans-serif; /* Cambia la fuente del texto */
            background-color: #808080; /* Color de fondo del botón */
            border-color: #808080;
            background-color: rgba(192, 192, 192, 0.5) !important;
            /*border: 2px solid #808080; /* Borde de 2px gris */
            padding: 10px 20px; /* Espaciado interno */
        }

        /* Estilo para el formulario de búsqueda */
        .search-form {
            position: absolute;
            top: 30%; /* Ajusta la posición vertical */
            left: 50%;
            transform: translateX(-50%);
            z-index: 1; /* Asegura que esté sobre la imagen */
