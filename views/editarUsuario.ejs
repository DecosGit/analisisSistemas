<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Editar usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="createUser.css">
</head>

<body>
    <div class="container">
        <form form id="formularioUsuario" method="post" action="/editUsuario/<%= usuario.id %>" onsubmit="return validaciones()">
            <div class="row">
                <h2 class="text-center">Formulario para editar usuario</h2>
            </div>
            <br>
            <div class="row justify-content-center">
                <div class="col-sm-6">
                    <label for="uiLabelNombres" class="form-label text-center">Nombres:</label>
                    <input type="text" class="form-control" id="uiNombres" name="nombres"
                        value="<%= usuario.nombre %>" required>
                </div>
                <div class="col-sm-6">
                    <label for="uiLabelApellidos" class="form-label text-center">Apellidos:</label>
                    <input type="text" class="form-control" id="uiApellidos" name="apellidos"
                        value="<%= usuario.apellido %>" required>
                </div>
            </div>
            <br>
            <div class="row justify-content-center">
                <div class="col-sm-6">
                    <label for="uiLabelCui" class="form-label text-center">CUI:</label>
                    <input type="number" class="form-control text-center" id="uiCui" name="cui" onchange="validarCui()"
                        value="<%= usuario.dpi %>" required>
                </div>
                <div class="col-sm-6">
                    <label for="uiLabelCorreo" class="form-label text-center">Correo electrónico:</label>
                    <input type="email" class="form-control text-center" id="uiCorreoElectronico" name="correo"
                        value="<%= usuario.correo_electronico %>" required>
                </div>
            </div>
            <br>
            <div class="row justify-content-center">
                <div class="col-sm-6">
                    <label for="uiLabelRol" class="form-label text-center">Rol:</label>
                    <select class="form-select text-center" id="uiRol" name="rol" onchange="validarRol()" required>
                        <option value="-">-</option>
                        <option value="Admin" <% if (usuario.rol === 'Admin') { %> selected <% } %>>Admin</option>
                        <option value="Basic" <% if (usuario.rol === 'Basic') { %> selected <% } %>>Basic</option>
                    </select>
                </div>
            </div>
            <br>
            <div class="row justify-content-center">
                <div class="col-sm-5">
                    <button type="submit" class="form-control btn btn-outline-primary">Editar usuario</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        function validaciones() {
            var cuiValido = validarCui();
            var rolValido = validarRol();
            if (!rolValido || !cuiValido) {
                return false;
            }
            return true;
        }

        function validarCui() {
            let texto = document.getElementById("uiCui").value;
            if (texto.length !== 13) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Debes ingresar 13 dígitos para el CUI',
                });
                return false;
            }
            return true;
        }

        function validarRol() {
            var rolSeleccionado = document.getElementById("uiRol").value;
            if (rolSeleccionado !== "Admin" && rolSeleccionado !== "Basic") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Seleccione un rol válido.'
                });
                return false;
            }
            return true;
        }

    </script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
</body>

</html>