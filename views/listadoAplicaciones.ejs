<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Empleo</title>
    <!-- Enlace a Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Enlace a Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <style>
        li {
            display: flex;
            justify-content: space-between;
            gap: 3rem;
            border: 1px solid steelblue;
            border-radius: 8px;
            padding: 2em 1em;
        }
        .botones-propios {
            display: flex;
            gap: 1rem;
        }
    </style>
</head>

<body>
    <!-- Barra de navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">INICIO</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/empleo">EMPLEOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/adminUsuarios">ADMINISTRACIÓN DE
                            USUARIOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/listadoProcesos">PROCESOS</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/">Salir</a>
                    </li>
                </ul>
            </div>
            <% if (username && username.length> 0) {
                let userName = JSON.parse(username); %>
                <span>
                    <%= userName[0].nombre %>
                </span>
                <% } %>
        </div>
    </nav>

    <% if(data && data.length) { const fecha=new Date(data[0].fecha_vencimiento); const
        dia=fecha.getDate().toString().padStart(2, '0' ); const mes=(fecha.getMonth() + 1).toString().padStart(2, '0' );
        const anio=fecha.getFullYear(); const fechaVencimientoConvertida=anio + "-" + mes + "-" + dia; %>
        <div class="mb-3 mt-5">
            <label for="puesto" class="form-label mt-5">Titulo Perfil:</label>
            <span class="form-label">
                <%= data[0].nombreEmpleo %>
            </span>
        </div>
        <div class="mb-3">
            <label for="descripcion" class="form-label">Descripción:</label>
            <span class="form-label">
                <%= data[0].descripcion %>
            </span>
        </div>
        <div class="mb-3">
            <label for="sueldo" class="form-label">Sueldo:</label>
            <span class="form-label">
                <%= data[0].sueldo %>
            </span>
        </div>
        <div class="mb-3">
            <label for="fecha" class="form-label">Fecha de vencimiento:</label>
            <span class="form-label">
                <%= fechaVencimientoConvertida %>
            </span>
        </div>
        <section class="container-fluid">
            <ul>
                <% data.forEach((elemento)=> { %>
                    <li>
                        <div>
                            <span class="fw-bold">Nombre: </span>
                            <span >
                                <%= elemento.nombre %>
                            </span>
                        </div>
                        <div>
                            <span class="fw-bold">Apellido: </span>
                            <span>
                                <%= elemento.apellido %>
                            </span>
                        </div>
                        <div>
                            <span class="fw-bold">Telefono: </span>
                            <span>
                                <%= elemento.telefonos %>
                            </span>
                        </div>
                        <div>
                            <span class="fw-bold">Profesion: </span>
                            <span>
                                <%= elemento.profesion %>
                            </span>
                        </div>
                        <div>
                            <span class="fw-bold">Foto: </span>
                            <button type="button" class="btn btn-secondary mt-2" data-cui="<%= elemento.cui %>"
                                onclick="viewPhoto(this)">Ver Foto</button>
                        </div>
                        <div class="botones-propios">
                            <form action="/rechazarCV" method="post">
                                <input type="hidden" name="data" value="<%= JSON.stringify(elemento) %>">
                                <button class="btn btn-outline-danger" type="submit">Rechazar</button>
                            </form>
                            <form action="/aceptarCV" method="post">
                                <input type="hidden" name="data" value="<%= JSON.stringify(elemento) %>">
                                <button class="btn btn-outline-success" data-full="<%= JSON.stringify(elemento) %>"
                                    onclick="acceptCV(this)">Aceptar</button>
                            </form>
                        </div>
                    </li>
                    <% }) %>
            </ul>
        </section>
        <% }else { %>
            <div class="text-danger mx-5 my-5 px-5 py-5">
                <h2>NO SE ENCONTRARON RESULTADOS...</h2>
            </div>
            <% } %> 

            <script>
                // Función para ver la foto
                function viewPhoto(button) {
                    let cui = button.getAttribute('data-cui');
                    window.open(`/resources/FotoCv/${cui}.jpg`, '_blank');
                }
            </script>
</body>

</html>